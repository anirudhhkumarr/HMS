<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>Welcome <?php echo $this->session->userdata('session_uname');?></title>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
	<script>
		$(document).ready(function(){
			$("#submit").click(function(event){
				username = $("#username").val();
				password = $("#password").val();
				$.post("<?php echo base_url("user/login");?>",{username:username,password:password}, function(response){
					if(response=='Successfull'){
					  
					  window.location="<?php echo base_url('pages/view/home');?>";
					}else{
					  alert(response);
					}
				});
			});

		});
	</script>
</head>
<body>
	<header1><center>Welcome <?php echo $this->session->userdata('session_uname');?><center><header1>
	<div>
		<div id="submit"><button>Login</button></div>
  	</div>
</body>
</html>
